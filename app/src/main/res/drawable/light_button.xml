<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때의 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mint1"/> <!-- 배경 색상 -->
            <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->
            <stroke
                android:width="2dp"
                android:color="@color/mint2"/> <!-- 테두리 색상 -->
        </shape>
    </item>
    <!-- 버튼이 기본 상태일 때 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mint3"/> <!-- 배경 색상 -->
            <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->
        </shape>
    </item>
</selector>
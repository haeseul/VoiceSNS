<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 내비게이션 바가 반투명하도록 설정 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- BottomAppBar 스타일 정의 -->
    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- 아이콘 크기 설정 -->
    <style name="BottomAppBarIconStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">@dimen/text_size_m</item>
    </style>

    <!-- fab 모양 설정 -->
    <style name="FabShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>